
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button class="btn btn-sm btn-primary m-2" id="btnAddEmployee">Add Employee</button>
<table class="table table-bordered">
    <thead>
        <tr class="text-center">
        <th>EmpID</th>
        <th>EmpName</th>
        <th>ProfileImg</th>
        <th>Gender</th>
        <th>Department</th>
        <th>Salary</th>
        <th>StartDate</th>
        <th>Notes</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody id="table_data" class="text-center">

    </tbody>
</table>

<div class="madal fade modal" id="EmployeeMadal">
    <div class="modal-dialog">
        <div class="modal-content" >
            <div class="modal-header">
                <h1 class="text-info modal-title">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                     <div class="form-group" id="empId ">
                        <label>EmployeeID</label>
                        <input type="text"  class="form-control" id="EmployeeId" disabled="disabled">
                    </div>
                    <div class="form-group">
                        <label>Employee Name</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="empname">
                    </div>
                    <div class="form-group">
                        <label>Profile Img</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="profileimg">
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="gender">
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="department">
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="salary">
                    </div>
                    <div class="form-group">
                        <label>Start Date</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="startdate">
                    </div>
                    <div class="form-group">
                        <label>Notes</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="notes">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddEmployee();" id="AddEmployee">Save</button>
                <button class="btn btn-warning" onclick="UpdateEmployee();" style="display:none" id="btnUpdate">Update</button>
                <button class="btn btn-dange btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div>
    <input type="hidden" id="urlEmployeeData" value="@Url.Action("EmployeeList","Emp")" />
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/custom.js"></script>



